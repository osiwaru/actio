# Environment Configuration for ACTIO
# Copy this file to .env and fill in the values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=ACTIO
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ===========================================
# Development Authentication (E06)
# Only used when APP_ENV=development
# ===========================================
DEV_MODE=true
DEV_USER_EMAIL=dev@actio.local
DEV_USER_NAME=Developer
DEV_USER_ROLE=admin

# ===========================================
# SELIO Database (Production Authentication)
# ===========================================
SELIO_DB_SERVER=ocm-oiles\sqlexpress
SELIO_DB_NAME=Selio
SELIO_DB_USER=Selio
SELIO_DB_PASSWORD=

# ===========================================
# Microsoft Teams Webhook (Notifications)
# ===========================================
TEAMS_WEBHOOK_URL=

# ===========================================
# DeepL API (Translations)
# ===========================================
DEEPL_API_KEY=

# ===========================================
# Session Settings
# ===========================================
SESSION_LIFETIME=120
SESSION_NAME=actio_session

# ===========================================
# Upload Settings
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,zip
